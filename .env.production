# ================================
# Railway Production Environment
# ================================

# Application
APP_NAME=GoField
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://your-app.up.railway.app

# Database (Railway PostgreSQL - Auto-injected)
# Railway akan auto-inject DATABASE_URL, uncomment jika manual:
# DB_CONNECTION=pgsql
# DB_HOST=${PGHOST}
# DB_PORT=${PGPORT}
# DB_DATABASE=${PGDATABASE}
# DB_USERNAME=${PGUSER}
# DB_PASSWORD=${PGPASSWORD}

# Alternative: MySQL
# DB_CONNECTION=mysql
# DB_HOST=${MYSQLHOST}
# DB_PORT=${MYSQLPORT}
# DB_DATABASE=${MYSQLDATABASE}
# DB_USERNAME=${MYSQLUSER}
# DB_PASSWORD=${MYSQLPASSWORD}

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
CACHE_DRIVER=database

# Queue (Database driver untuk Railway)
QUEUE_CONNECTION=database

# Mail Configuration (SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@gofield.com"
MAIL_FROM_NAME="${APP_NAME}"

# WhatsApp Notification (Fonnte)
FONNTE_API_KEY=your_fonnte_api_key_here
FONNTE_URL=https://api.fonnte.com/send

# File Storage (Cloudinary for Railway)
FILESYSTEM_DISK=cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Alternative: Local storage (not recommended for Railway)
# FILESYSTEM_DISK=public

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Broadcasting & Pusher (optional)
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# Security
SANCTUM_STATEFUL_DOMAINS=your-app.up.railway.app
SESSION_DOMAIN=.your-app.up.railway.app

# Telescope (disable in production)
TELESCOPE_ENABLED=false

# Optimization
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
